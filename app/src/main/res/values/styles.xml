<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  
  <style name="WidgetTheme" parent="Theme.AppCompat.Light">
    <item name="android:background">@android:color/white</item>
    <item name="android:textColor">@color/textPrimaryDark</item>
  </style>
  
  <style name="TelePrompter" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="ColorScheme">
    <item name="android:layout_margin">10dp</item>
    <item name="android:textColor">#fff</item>
    <item name="android:text">A</item>
    <item name="android:textSize">32dp</item>
    <item name="android:gravity">center_horizontal|center_vertical</item>
    <item name="android:padding">5dp</item>
    <item name="android:layout_width">50dp</item>
    <item name="android:layout_height">50dp</item>
  </style>

  <style name="TelePrompter.PropertyIcon">
    <item name="android:layout_width">28dp</item>
    <item name="android:layout_height">28dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:onClick">propertyClicked</item>
  </style>

  <style name="TelePrompter.PropertyStatus">
    <item name="android:textSize" tools:ignore="SpUsage">18dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:textColor">@color/textPrimary</item>
  </style>
</resources>
